    <div class="container-fluid col-md-offset-2">
        <div class="col-md-10">
          <textarea class="form-control" placeholder="Say Hello..." maxlength="50" required rows="5" wrap="hard" autofocus="" id="message"></textarea>
          <div id="chatButton">
            <button class="btn btn-info" type="submit" id="messageSubmit">Submit</button>
          </div>
        </div>
      </div>
    </form>
